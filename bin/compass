#!/usr/bin/env ruby
# The compass command line utility

begin
  retried = false
  require 'compass'
  require 'compass/exec'
rescue LoadError
  if retried
    raise
  else
    $: << File.join(File.dirname(__FILE__), '..', 'lib')
    retried = true
    retry
  end
end

command = Compass::Exec::Compass.new(ARGV)
exit command.run!
